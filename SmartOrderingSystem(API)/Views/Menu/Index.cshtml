@model List<SmartOrderingSystem.Models.MenuItem>

<h2>Menu Items</h2>

<p>
    <a asp-action="Create">Add New Menu Item</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price ($)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
