@model SmartOrderingSystem.Models.Order

<h2>Order Details</h2>

<p><strong>Customer:</strong> @Model.CustomerName</p>
<p><strong>Status:</strong> @Model.Status.ToString()</p>

<h4>Items</h4>
<ul>
    @foreach (var item in Model.Items)
    {
        <li>@item.MenuItemName - Qty: @item.Quantity - Price: @item.Price.ToString("C")</li>
    }
</ul>

<p><strong>Total Price:</strong> @Model.TotalPrice.ToString("C")</p>

<a asp-action="Index">Back to List</a>

