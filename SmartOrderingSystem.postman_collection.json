{
  "info": {
    "name": "Smart Ordering System API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\"username\": \"admin\", \"password\": \"admin123\"}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "http://localhost:5010/api/Auth/login"
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\"username\": \"newuser\", \"password\": \"pass123\", \"role\": \"Customer\"}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{baseUrl}}/api/Auth/register"
          }
        }
      ]
    },
    {
      "name": "Menu",
      "item": [
        {
          "name": "Get All Menu Items",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/api/Menu"
          }
        },
        {
          "name": "Add Menu Item",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\"name\": \"Pizza\", \"price\": 9.99}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{baseUrl}}/api/Menu"
          }
        }
      ]
    },
    {
      "name": "Order",
      "item": [
        {
          "name": "Place Order",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\"items\": [{\"menuItemId\": 1, \"name\": \"Zinger Burger\", \"quantity\": 2, \"price\": 5.99}, {\"menuItemId\": 2, \"name\": \"Fries\", \"quantity\": 1, \"price\": 2.99}], \"customerName\": \"John Doe\", \"customerPhone\": \"+923123456789\"}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{baseUrl}}/api/Order"
          }
        },
        {
          "name": "Update Order Status",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "\"In Kitchen\"",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{baseUrl}}/api/Order/1/status"
          }
        }
      ]
    },
    {
      "name": "Feedback",
      "item": [
        {
          "name": "Submit Feedback",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\"orderId\": 1, \"rating\": 4, \"comment\": \"Burger was cold, but pizza was amazing\", \"sentiment\": \"Mixed\", \"keywords\": [\"burger\", \"pizza\"]}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{baseUrl}}/api/Feedback"
          }
        }
      ]
    },
    {
      "name": "AI",
      "item": [
        {
          "name": "Parse Voice Order",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\"text\": \"2 zinger burgers and 1 fries\"}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{aiBaseUrl}}/parse-order"
          }
        },
        {
          "name": "Analyze Feedback",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\"comment\": \"Burger was cold, but pizza was amazing\"}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "{{aiBaseUrl}}/analyze-feedback"
          }
        }
      ]
    }
